<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zking.mapper.xtgl.IMenuMapper">
    <select id="findParentMenuByJop" resultType="Menu" parameterType="java.lang.String">
        select * from Menu where MenuParent IS NULL and MenuId in (select MenuId from JopMenu where jobid=#{Jop})
    </select>
    <select id="findSonMenuByParent" resultType="Menu" parameterType="Menu">
        select * from Menu where menuParent=#{startTime} and MenuId in (select MenuId from JopMenu where jobid=#{endTime})
    </select>
    <select id="findParentMenuAll" resultType="Menu" parameterType="java.lang.String">
        select * from Menu
        <where>
            <if test="MenuName!=null">
                and MenuName like '%${MenuName}%'
            </if>
            and MenuParent IS NULL
        </where>
    </select>
    <select id="findSonMenuByPid" resultType="Menu" parameterType="java.lang.String">
        select * FROM Menu WHERE MenuParent=#{MenuParent}
    </select>
    <select id="findParentMenuAll1" resultType="Menu">
        select * FROM Menu WHERE MenuParent IS NULL
    </select>
    <insert id="addMenu" parameterType="Menu">
        INSERT INTO menu VALUES (#{MenuId},#{text},#{MenuParent},#{MenuPath})
    </insert>
    <delete id="removeMenu" parameterType="Menu">
        DELETE FROM menu WHERE MenuId=#{MenuId}
    </delete>
    <update id="editMenu" parameterType="Menu">
        <if test="startTime==null">
            UPDATE Menu SET menuname=#{text} WHERE MenuId=#{MenuId}
        </if>
        <if test="startTime!=null">
            UPDATE Menu SET menuname=#{text},MenuParent=#{MenuParent},MenuPath=#{MenuPath} WHERE MenuId=#{MenuId}
        </if>
    </update>
</mapper>